<div id="signInBox" class="container">
    <div class="row">

        <div class="col-sm-3"></div>
        <div class="col-sm-6 align-middle">
            <div id="signInCorner" class="card card-block mt-4 p-5">

                <form class="signin">
                    <div class="form-group">
                        <h1 class="formHead">Log In</h1>
                        <hr>
                        <hr>
                        <label for="emailInput">Email address</label>
                        <input type="email" class="form-control" id="emailInput" placeholder="email@example.com">
                    </div>
                    <div class="form-group">
                        <label for="passwordInput">Password</label>
                        <input type="password" class="form-control" id="passwordInput" placeholder="Password">
                    </div>
                    <div class="form-group">
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="dropdownCheck">
                            <label class="form-check-label" for="dropdownCheck">
                                Remember me
                            </label>
                        </div>
                    </div>
                </form>

                <a href="/index" id="submit" type="submit" class="btn btn-primary" role="button">Log In</a>

                <div class="dropdown-divider"></div>

                <a id="signUp" class="dropdown-item" href="/signup">- New around here? Sign up</a>
                <a id="forgotPassword" class="dropdown-item" href="#">- Forgot password?</a>

            </div>
        </div>
        <div class="col-sm-3"></div>
    </div>
</div>